#include <pthread.h>
#include <stdio.h>
#include <unistd.h>

void *my_thread(void *arg) {

  printf("Inside a thread!\n");
  return NULL;
}

int main(void) {
  //
  printf("Hello World\n");
  pthread_t thread_id;

  pthread_create(&thread_id, NULL, my_thread, NULL);
  pthread_join(thread_id, NULL);
  /*sleep(5);*/
  printf("Done.\n");
}
